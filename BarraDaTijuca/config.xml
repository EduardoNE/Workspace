<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.barradatijuca" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BarraDaTijuca</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>

    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    
	<gap:plugin name="org.apache.cordova.core.geolocation" />
    <feature name="Geolocation">
    	<param name="ios-package" value="CDVLocation" />
	</feature>

    <gap:config-file platform="ios" parent="NSLocationAlwaysUsageDescription" overwrite="true">
        <string>Varios serviços dependem dessa autorização.</string>
    </gap:config-file>
    <content src="index.html" />
    <access origin="*" />
</widget>
